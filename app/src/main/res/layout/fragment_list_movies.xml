<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
                name="viewModel"
                type="com.alesno.testtaskispring.ui.listsactivity.videos.viewmodel.CommonViewModel" />

        <variable
                name="isFavorite"
                type="java.lang.Boolean" />

    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipe_to_refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:setItems="@{isFavorite ? viewModel.favoriteVideosObj : viewModel.videosObj}" />

                <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:visibility="@{viewModel.isProgressBarVisible ? View.VISIBLE : View.GONE}" />

                <TextView
                        isFavoriteBeOut="@{viewModel.favoriteVideosObj.size == 0}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="30dp"
                        app:isDataBeOut="@{viewModel.videosObj.size == 0}"
                        app:isFavorite="@{isFavorite}" />

                <Button
                        android:id="@+id/button_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:background="@color/colorBlue"
                        android:onClick="@{() -> viewModel.onRefreshedListAllVideos()}"
                        android:text="@string/update"
                        android:textColor="@color/colorWhite"
                        android:visibility="@{(!isFavorite &amp;&amp; viewModel.videosObj.size == 0 &amp;&amp; !viewModel.isProgressBarVisible) ? View.VISIBLE : View.GONE}" />

            </FrameLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </FrameLayout>
</layout>