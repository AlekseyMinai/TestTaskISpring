<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="video"
                type="com.alesno.testtaskispring.model.objectbox.entities.VideoObject" />

        <variable
                name="viewModel"
                type="com.alesno.testtaskispring.ui.listsactivity.videos.viewmodel.CommonViewModel" />

    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                    android:layout_width="220dp"
                    android:layout_height="130dp"
                    android:layout_margin="25dp"
                    app:errorImage="@{@drawable/shape_background}"
                    app:url="@{video.preview}" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="60dp"
                        android:text="@{video.title}"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/item_text_size" />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/item_margin"
                        android:layout_marginTop="@dimen/item_margin"
                        android:layout_marginBottom="@dimen/item_margin"
                        app:setTextColorByProgress="@{video.progress}"
                        app:setTextProgressByProgress="@{video.progress}" />

            </LinearLayout>
        </LinearLayout>

        <CheckBox
                android:id="@+id/checkbox_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="@dimen/item_checkbox_margin"
                android:button="@drawable/checkbox_selector" />
    </FrameLayout>
</layout>